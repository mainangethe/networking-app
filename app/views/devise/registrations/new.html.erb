<div class="container" id="sign-up-form">
  <div class="row">

    <h1>Get in touch with like-minded people</h1>

    <h3>Create, party, accomplish goals together</h3>

    <div class="col-sm-offset-6 col-sm-6">

      <h3>Sign up<small> it's free!</small></h3>

      <%= bootstrap_form_for( resource,
                              :as => resource_name,
                              :url => registration_path(resource_name)) do |form| %>

        <%= form.text_field :username,
                            placeholder: 'GitheriMan (will be shown publicly)',
                            class: 'form-control' %>

        <%= form.text_field :email,
                            placeholder: 'bob@safaricom.co.ke',
                            class: 'form-control' %>

        <%= form.password_field :password,
                                placeholder: 'Create our secret handshake',
                                class: 'form-control' %>

        <%= form.password_field :password_confirmation,
                                placeholder: "Extra measure for you to remember it",
                                class: 'form-control' %>

        <%= form.submit 'Register Account', class: 'btn btn-primary register-button' %>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
