<h2>Log in</h2>

<%= bootstrap_form_for( resource,
                        as: resource_name,
                        url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email,
                      autofocus: true,
                      class: 'form-control',
                      autocomplete: "email",
                      placeholder: 'like: makmende@nsis.go.ke' %>

    <%= f.password_field  :password,
                          autocomplete: "off",
                          class: 'form-control',
                          placeholder: 'Enter our secret handshake' %>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me,
                      class: 'form-check-input' %>
  <% end %>

    <%= f.submit "Log in", class: 'form-control btn btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>
